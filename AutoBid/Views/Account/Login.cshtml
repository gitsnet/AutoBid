@model AutoBid.Models.LoginViewModel

@{
    ViewBag.Title = "Log in";
}

<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="formbg2">
                    <div class="sellerfg_header">Use a local account to log in.</div>
                    <hr />
                    <section id="loginForm">
                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                      
                      
                        @Html.ValidationSummary(true)
                        <div class="form-group">
                            @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label new_text" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.UserName)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label new_text" })
                            <div class="col-md-10">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password)
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <div class="col-md-5 text-right">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                            <div class="col-md-7 text-right margin-auto">
                             
                                <input type="submit" value="Log in" class="btn btn-info" />
                             
                            </div>
                        </div>
                        <p class="text-right">
                            @Html.ActionLink("Register", "Register") if you don't have a local account.
                        </p>
                    }
                    </section>
                </div>
            </div>
            @*<div class="col-md-4">
                <section id="socialLoginForm">
                    @Html.Partial("_ExternalLoginsListPartial", new { Action = "ExternalLogin", ReturnUrl = ViewBag.ReturnUrl })
                </section>
            </div>*@
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
