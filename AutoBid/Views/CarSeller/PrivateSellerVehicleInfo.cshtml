<script>
    $('#DateOfFirstRegistration').on('changeDate', function (ev) {
        $(this).datepicker('hide');
    });
    $(".steps>li").click(function () {
        if ($(this).attr("data-enable") == "true") {
            $(".steps>li").removeClass("active");
            var tab = $(this).attr("data-value");
            PrivatePushImages();
            $("[id^=tab]").hide();
            $(tab).show();
            $(this).addClass("active");
        }

    });
</script>
