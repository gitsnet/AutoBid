@model List<AutoBid.Models.Auction.AuctionHouseUpcomingSalesModel>
@{
    ViewBag.Title = "Enter Sales Room";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="section formwrap">
    <div class="container">
        @Html.Partial("_AuctionHouseVehicleMenu")

        <div class="row">
            <div class="col-md-9">
                <div class="row auction_house_content">

                    <h1>Enter Sales Room</h1>

                    <div class="col-md-12">
                        <h4>Choose Sale to Take Live</h4>
                        <table width="100%" border="0" cellspacing="0" cellpadding="0" class="table table-bordered table-striped">
                            <tr>
                                <th>#</th>
                                <th>Sale Date</th>
                                <th>Vehicles</th>
                                <th>&nbsp;</th>
                            </tr>
                            @if (Model.Count > 0)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.aucHouseSale.Title</td>
                                        <td>@item.aucHouseSale.SaleDate</td>
                                        <td>@item.aucHouseSale.AuctionHouseCarSellingList.Count</td>
                                        <td><a href="@Url.Action("LiveAuction","AuctionHouseController")">Take Live</a></td>
                                    </tr>
                                }
                            }
