@model AutoBid.Models.Auction.AuctionHouseModel
@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated && HttpContext.Current.User.IsInRole("AuctionHouse"))
{
    using (Html.BeginForm("LogOff", "AuctionHouse", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
         @*@Html.AntiForgeryToken()*@
        <ul class="nav navbar-nav navbar-right">
            <li><span class="navTxt welcome">Welcome  @Html.ActionLink(User.Identity.GetUserName(), "Manage", "Account", routeValues: null, htmlAttributes: new { title = "Manage" })</span></li>

            <li class="bluenav"><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
}
else
{
    <button type="button" class="btn btn-primary navbar-right auctionloginBtn" style="">
        <span>Auction House Login</span>
    </button>
}
<div class="login_popupdiv" id="auctionlogin_popupdiv" style="display: none; top: 100%; right: 0">
    <div class="">

        @using (Html.BeginForm("AuctionHouseLogin", "AuctionHouse", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @*@Html.AntiForgeryToken()*@
            <div class="form-group">

                @Html.LabelFor(m => m.UserName, new { @class = "col-sm-4 control-label", @style = "color:#fff;" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.UserName)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-sm-4 control-label", @style = "color:#fff;" })
                <div class="col-sm-8">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>

            @*<div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                        </div>
                    </div>
                </div>*@
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-4 control-label"></label>
                <div class="col-sm-8">
                    @*<a class="btn btn-success signinBtn" type="submit" href="index.html">Sign In</a>*@
                    @*@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "btn btn-success signinBtn" })*@
                    <input type="submit" value="Log in" class="btn btn-success signinBtn" />
                </div>
            </div>
        }




    </div>
</div>
<script>
    $(".auctionloginBtn").click(function () {

        $("#auctionlogin_popupdiv").slideToggle();
    });
</script>



